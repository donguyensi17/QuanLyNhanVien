<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="400dp"
    android:background="@drawable/brmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietPBActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/DrawerLayoutchitietnhanvien"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:background="@drawable/backgroundchudao"
            app:title="Chi Tiết Phòng Ban"
            app:titleTextColor="#ffffff"
            android:id="@+id/toolbarchitietphongban"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </android.support.v7.widget.Toolbar>
    </android.support.v4.widget.DrawerLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp">
                <TextView
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold"
                    android:textSize="25sp"
                    android:id="@+id/textviewchitietmaphongban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã: " />
                <EditText
                    android:textColor="#ffffff"
                    android:id="@+id/edittextchitietmaphongban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp">
                <TextView
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold"
                    android:textSize="25sp"
                    android:id="@+id/textviewchitiettenphongban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên: "/>
                <EditText
                    android:textColor="#ffffff"
                    android:id="@+id/edittextchitiettenphongban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="#ffffff"
            android:text="Xóa"
            android:id="@+id/btnXaochitietphongban"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:text="Sửa"
            android:id="@+id/btnSuachitietphongban"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <Button
            android:background="#ffffff"
            android:text="Thêm"
            android:id="@+id/btnThemchitietphongban"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</LinearLayout>